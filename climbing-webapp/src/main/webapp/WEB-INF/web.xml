<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>com.nicolasboueme.climbing.webapp.servlet.Home</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Climbing</servlet-name>
        <servlet-class>com.nicolasboueme.climbing.webapp.servlet.Spot</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Climbing</servlet-name>
        <url-pattern>/climbing</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Sector</servlet-name>
        <servlet-class>com.nicolasboueme.climbing.webapp.servlet.Sector</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Sector</servlet-name>
        <url-pattern>/climbing/sector</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Route</servlet-name>
        <servlet-class>com.nicolasboueme.climbing.webapp.servlet.Route</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Route</servlet-name>
        <url-pattern>/climbing/route</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>RouteItem</servlet-name>
        <servlet-class>com.nicolasboueme.climbing.webapp.servlet.RouteItem</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RouteItem</servlet-name>
        <url-pattern>/climbing/route/item</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Topo</servlet-name>
        <servlet-class>com.nicolasboueme.climbing.webapp.servlet.Topo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Topo</servlet-name>
        <url-pattern>/topo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TopoItem</servlet-name>
        <servlet-class>com.nicolasboueme.climbing.webapp.servlet.TopoItem</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TopoItem</servlet-name>
        <url-pattern>/topo/item</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>com.nicolasboueme.climbing.webapp.servlet.Search</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/_error/error404.jsp</location>
    </error-page>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
</web-app>
